{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/tasks.css') }}">
{% endblock %}

{% block body %}
<div class="taskLayout">
    <h1>Opdrachten</h1>
    {% for task in tasks %}
        <li class="taskItem">{{ task.name }} - <small>{{ task.score }} punten</small>
        <hr></li>
    {% endfor %}
    </div>
{% endblock %}
